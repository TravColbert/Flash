if todos.length
  if filter === 'completed' 
    - todosToList = todos.filter(todo => todo.completed===true)
  else if filter === 'active' 
    - todosToList = todos.filter(todo => todo.completed===false)
  else 
    - todosToList = todos

  each todo in todosToList
    .container
      .columns 
        .column.col-1 
          label.form-switch
            input(type='checkbox', name='todo[completed]', checked=!!(todo.completed), hx-post=`/todos/${todo.id}?_method=put&_format=block` hx-target='#todos-list')
            i.form-icon
        .column.col-10.h4
          if todo.completed 
            s.text-muted= todo.title
          else 
            span= todo.title 
        .column.col-1 
          a(hx-post=`/todos/${todo.id}?_method=delete&_format=block`, hx-target='#todos-list')
            i.icon.icon-cross
  include _controls
