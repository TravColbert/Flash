extends ../../../views/layout

block variables
  - var selected = "Card";
  - var title = "Cards";

block content
  h2 Card
  section.item
    .card-details
      .front
        h3 #{card.front}
      .back #{card.back}
  section.footer
    .card-tags
      each tag in card.tags
        .tag #{tag.name}
    .controls
      button.btn.btn-primary(hx-get=`/cards/${card.id}/edit`, hx-target='body')= `Edit ${card.front}`
      button.btn.btn-error(hx-post=`/cards/${card.id}?_method=delete`, title='delete card', hx-target='body')= `Delete ${card.front}`